# get spreadsheet from sharepoint
user = ''
passwrd = ''
sharepoint_file = '/sites/TechIROCCV/Shared%20Documents/General/Bridging/bridging_video_list_20240424.xlsx'
sharepoint_url = 'https://spo.bhpbilliton.com/sites/TechIROCCV'


def get_sharepoint_context():
    user_credentials = UserCredential(user, passwrd)
    ctx = ClientContext(sharepoint_url).with_credentials(user_credentials)
    return ctx
 

def get_sharepoint_file():
    ctx = get_sharepoint_context()
    response = File.open_binary(ctx, sharepoint_file)
    
    df = pd.read_excel(response.content, sheet_name='bridging_videos_20240419')
    return df

csv_file = get_sharepoint_file()
